extends layout

block content
	div.progress
		div.progress-bar.progress-bar-striped.active(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100")

	div.panel-group(role="tablist")
		div.panel.panel-default
			div.panel-heading(role="tab" id="collapseListGroupHeading1")
				h4.panel-title
					a(data-toggle="collapse", href="#collapseListGroup1", aria-expanded="true", aria-controls="collapseListGroup1") Today's Activities
			div.panel-collapse.collapse(id="collapseListGroup1", role="tabpanel", aria-labelledby="collapseListGroupHeading1", aria-expanded="true")
				ul.list-group

	div.activities
		for activity in activities
			div.activity
				div.activityBorder
					div.activityName= activity.name
					div.activityDesc= activity.description
					div.activityPoints
						p= activity.points
							| &nbsp;
							span pts.
